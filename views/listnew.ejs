
<!DOCTYPE html>
<html lang="en">
    <head>
        <title>List job</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="/css/listnew.css" rel="stylesheet">
        <link rel="icon" type="image/svg" href="/assets/Logonew.png">
        <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
        <style>
            #submit{
                border-bottom: none;
                padding: 0%;
            }
        </style>
    </head>
    <body>
        <div class="container">
            <div class="left">
                <a href=""><p>RoziRoti</p></a>
                <img src="/assets/garib.jpg" alt="">
            </div>

            <div class="right">
                
                <h2>List a Job</h2>
                <div class="form">
                    
                    <form action="/search" method="POST">
                        <select name="jname" id="" required >
                            <option value="none" selected disabled hidden>Select from the following Job</option>
                            <option value="Maid">Maid</option>
                            <option value="Sweeper">Sweeper</option>
                            <option value="Plumber">Plumber</option>
                            <option value="Driver">Driver</option>
                            <option value="Daily wage">Daily wage</option>
                            <option value="electrician">Electrician</option>
                            <option value="Cook">Cook</option>
                        </select>
                       <select name="gender" id="" required>
                            <option value="none"selected disabled hidden>Preferred Gender</option>
                           <option value="Male">Male</option>
                           <option value="Female">Female</option>
                       </select>
                        <input type="text" placeholder="Salary" required name="salary"><br>
                        <select name="jtype" id="" required >
                            <option value="none" selected disabled hidden>Select job type</option>
                            <option value="Long Term">Long Term</option>
                            <option value="Contractual">Contractual</option>
                        </select>
                        <br>
                        <input type="text" placeholder="Tenure" required name="tenure"><br>
                        <input type="text" placeholder="Place" required name="location" class="location"><br>
                        <input type="text" placeholder="Shift Timing" required name="timing" class="location"><br>
                        <input id="submit" type="button"  value="Get my Location" onclick="load()">
                        <input type="text" placeholder="Pincode" class="pin" required name="pin"><br>
                        <input type='text' placeholder="Email" required name="email"><br>
                        <input name="description" id="text" placeholder="Description" required><br>
                        <button>Submit</button>
                        
                    </form>
                   
                </div>
                
            </div>
            
           
        </div>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
        <script>
            var api = "https://fcc-weather-api.glitch.me/api/current?"; 
            function load(){
                if (navigator.geolocation) {
                    navigator.geolocation.getCurrentPosition(function (position) {
                        getLocation();
                    });
                }
                else{
                    alert('Browser not supported');
                }
            }

            function getLocation() {
                $.get("https://ipinfo.io?token=728a197543471f", function(response) {
                    document.querySelector('.location').setAttribute("value",response.city + " , " + response.region + " , " +response.country);
                    document.querySelector('.pin').setAttribute('value',response.postal);
                }, "jsonp")
                }


        </script>
    </body>
</html>
